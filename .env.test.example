# Test environment configuration
# Copy this file to .env.test and fill in your test credentials

# OpenAI API key (required for AI functionality)
OPENAI_API_KEY=your_openai_api_key_here

# Server configuration for tests
PORT=3001

# For E2E testing with real Nylas API
# These credentials are passed via HTTP headers in test requests
# NYLAS_ACCESS_TOKEN=your_test_nylas_token
# NYLAS_GRANT_ID=your_test_grant_id

# Test email address for E2E validation
TEST_EMAIL_ADDRESS=your_test_email@example.com

# Optional: Set to true to skip interactive prompts in CI
# CI=true

# Optional: Set to development for verbose logging
# NODE_ENV=development